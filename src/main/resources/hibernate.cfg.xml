<!DOCTYPE hibernate-configuration PUBLIC
        "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">

<hibernate-configuration>
    <session-factory>
        <property name="hibernate.connection.driver_class">org.postgresql.Driver</property>
        <property name="hibernate.connection.url">jdbc:postgresql://localhost:5432/sport_center</property>
        <property name="hibernate.connection.username">postgres</property>
        <property name="hibernate.connection.password">11111</property>

        <property name="hibernate.dialect">org.hibernate.dialect.PostgreSQLDialect</property>

        <property name="hibernate.hbm2ddl.auto">update</property>

        <property name="hibernate.show_sql">true</property>
        <property name="hibernate.format_sql">true</property>

        <mapping class="org.example.entity.Client"/>
        <mapping class="org.example.entity.PremiumClient"/>
        <mapping class="org.example.entity.Room"/>
        <mapping class="org.example.entity.SmallRoom"/>
        <mapping class="org.example.entity.ServiceEntity"/>
        <mapping class="org.example.entity.Visit"/>
        <mapping class="org.example.entity.Record"/>
        <mapping class="org.example.entity.Visitor"/>
    </session-factory>
</hibernate-configuration>